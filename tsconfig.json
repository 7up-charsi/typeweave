{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "importHelpers": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"]
  },
  "exclude": ["node_modules"],
  "include": ["packages/**/src/*"]
}
