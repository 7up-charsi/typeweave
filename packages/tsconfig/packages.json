{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "module": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "noEmit": true,
    "strict": true,
    "importHelpers": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"]
  },
  "exclude": ["node_modules"]
}
