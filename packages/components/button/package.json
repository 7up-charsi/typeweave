{
  "name": "@front-ui/button",
  "version": "1.0.1",
  "keywords": [
    "button"
  ],
  "author": {
    "name": "Muhammad Zeeshan",
    "email": "mzeeshan3597@gmail.com"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mzeeshan3597/front-ui.git",
    "directory": "packages/components/button"
  },
  "bugs": {
    "url": "https://github.com/mzeeshan3597/front-ui/issues"
  },
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "@front-ui/react-utils": "workspace:*",
    "@front-ui/theme": "workspace:*",
    "@front-ui/use-ripple": "workspace:*",
    "react-aria": "^3.29.0",
    "react-loader-spinner": "^5.4.5"
  },
  "devDependencies": {
    "clean-package": "^2.2.0"
  },
  "clean-package": {
    "extends": "../../../../../../clean-package.config.json",
    "remove": [
      "dependencies.react-loader-spinner"
    ]
  }
}
