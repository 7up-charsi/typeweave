{
  "name": "typeweave",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:sb": "pnpm --filter @typeweave/storybook dev",
    "dev:docs": "pnpm --filter @typeweave/docs dev",
    "build": "turbo build --filter ./packages/**",
    "typecheck": "turbo typecheck --filter ./packages/**",
    "clean": "pnpm turbo:clean && pnpm clean:node-modules && pnpm clean:lock",
    "turbo:clean": "turbo clean && rimraf ./node_modules/.cache/turbo",
    "clean:node-modules": "rimraf ./apps/**/node_modules ./packages/**/node_modules -g && rm -rf ./node_modules",
    "clean:lock": "rm -rf ./pnpm-lock.yaml",
    "clean:changelogs": "rimraf ./apps/**/CHANGELOG.md ./packages/**/CHANGELOG.md -g",
    "format:check": "prettier --check ./packages/**/src/**/*.{ts,tsx} --cache",
    "format:write": "prettier --write ./packages/**/src/**/*.{ts,tsx} --cache",
    "lint": "eslint -c .eslintrc.cjs ./packages/**/src/**/*.{ts,tsx}",
    "lint:fix": "eslint -c .eslintrc.cjs ./packages/**/src/**/*.{ts,tsx} --fix",
    "unused-deps": "tsx ./scripts/check-deps.ts",
    "create:pkg": "plop package",
    "create:cmp-docs": "plop component-docs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@microsoft/api-extractor": "^7.43.1",
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chalk": "^5.3.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^8.0.3",
    "plop": "^4.0.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwind-variants": "^0.1.20",
    "tslib": "^2.6.2",
    "tsup": "^8.0.2",
    "tsx": "^4.9.1",
    "turbo": "latest",
    "type-fest": "^4.18.1",
    "typescript": "^5.4.5"
  }
}

