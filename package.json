{
  "name": "gist-ui",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev:pkg": "pnpm --filter @gist-ui/storybook dev",
    "dev:docs": "pnpm --filter @gist-ui/docs dev",
    "typecheck": "turbo typecheck",
    "release:prepare": "changeset && pnpm clean && pnpm build",
    "release:bump": "changeset version",
    "release": "changeset publish",
    "turbo:clean": "turbo clean && rimraf ./node_modules/.cache/turbo",
    "clean": "pnpm turbo:clean && pnpm clean:node-modules && pnpm clean:lock && pnpm install",
    "clean:node-modules": "rimraf ./apps/**/node_modules ./packages/**/**/node_modules -g && rm -rf ./node_modules",
    "clean:changelogs": "rimraf ./packages/**/**/CHANGELOG.md -g",
    "clean:lock": "rm -rf ./pnpm-lock.yaml",
    "format:check": "prettier --check ./packages/**/**/src --cache",
    "format:write": "prettier --write ./packages/**/**/src --cache",
    "lint:pkg": "eslint -c .eslintrc.cjs ./packages/**/**/*.{ts,tsx}",
    "lint:pkg-fix": "eslint -c .eslintrc.cjs ./packages/**/**/*.{ts,tsx} --fix",
    "create:cmp": "plop component",
    "create:pkg": "plop package",
    "create:hook": "plop hook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@storybook/react": "^7.6.15",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^8.0.3",
    "plop": "^4.0.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwind-variants": "^0.1.20",
    "tslib": "^2.6.2",
    "tsup": "^8.0.2",
    "turbo": "latest"
  }
}
