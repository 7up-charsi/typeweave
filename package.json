{
  "name": "typeweave",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "dev:sb": "pnpm --filter @typeweave/storybook dev",
    "dev:docs": "pnpm --filter @typeweave/docs dev",
    "build": "turbo build",
    "build:pkgs": "turbo build --filter ./packages/**",
    "typecheck": "turbo typecheck",
    "typecheck:pkgs": "turbo typecheck --filter ./packages/**",
    "lint": "turbo lint",
    "lint:pkgs": "turbo lint --filter ./packages/**",
    "clean": "pnpm turbo:clean && pnpm clean:node-modules && pnpm clean:lock",
    "turbo:clean": "turbo clean && rimraf ./node_modules/.cache/turbo",
    "clean:node-modules": "rimraf ./apps/**/node_modules ./packages/**/node_modules -g && rm -rf ./node_modules",
    "clean:lock": "rm -rf ./pnpm-lock.yaml",
    "clean:changelogs": "rimraf ./apps/**/CHANGELOG.md ./packages/**/CHANGELOG.md -g",
    "format:pkgs:check": "prettier --check ./packages/**/src/**/*.{ts,tsx} --cache",
    "format:pkgs:write": "prettier --write ./packages/**/src/**/*.{ts,tsx} --cache",
    "unused-deps": "tsx ./scripts/check-deps.ts",
    "create:pkg": "plop package",
    "create:cmp-docs": "plop component-docs",
    "version:add": "pnpm changeset",
    "version:bump": "pnpm changeset version",
    "version:release": "pnpm changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/node": "^20.14.11",
    "chalk": "^5.3.0",
    "depcheck": "^1.4.7",
    "husky": "^8.0.3",
    "plop": "^4.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tslib": "^2.6.3",
    "tsx": "^4.16.2",
    "turbo": "latest",
    "type-fest": "^4.22.1",
    "typescript": "^5.5.3"
  }
}
