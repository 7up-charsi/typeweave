{
  "name": "@frontplus-ui/{{packageName}}",
  "version": "1.0.0",
  "keywords": [
    "{{packageName}}"
  ],
  "author": {
    "name": "Muhammad Zeeshan",
    "email": "mzeeshan3597@gmail.com"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontplus/frontplus-ui.git",
    "directory": "packages/{{outDir}}/{{packageName}}"
  },
  "bugs": {
    "url": "https://github.com/frontplus/frontplus-ui/issues"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.js"
    }
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "@frontplus-ui/theme": "workspace:*",
    "@frontplus-ui/shared-utils": "workspace:*",
    "@frontplus-ui/react-utils": "workspace:*"
  },
  "devDependencies": {
    "clean-package": "^2.2.0",
    "react": "^18.2.0"
  },
  "clean-package": "../../../clean-package.config.json"
}
